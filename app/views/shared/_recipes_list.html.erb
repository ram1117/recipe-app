<div class="recipes-container">
  <% if recipes.empty? %>
  <h2>Please add some recipes</h2>
  <% else %>
  <ul class="recipes-list">
    <% recipes.each do |recipe|%>
    <li class="recipes-list-item">
      <%= link_to user_recipe_path(user_id: userid,id: recipe.id) do %>
      <div class="recipe-items-container">
        <div class="recipe-title-group">
          <h2><%= recipe.name%></h2>
          <%= link_to user_recipe_path(user_id:userid,id:recipe.id), data: {turbo_method: :delete} do %>
          <button>Remove</button>
          <% end %>
        </div>
        <div class="recipe-short-detail">
          <p><%= recipe.description %></p>
        </div>
      </div>
      <% end %>
    </li>
    <% end %> <% end %>
  </ul>
</div>
