<section class="container">
  <div class="main">
    <a href="<%=request.path%>/new">
    <%= button_to "Add food", new_food_path, class: "btn" %>
    </a>
  </div>
  <table class="custom-table">
  <thead>
    <tr>
      <th scope="col" class="scope-col">Food</th>
      <th scope="col" class="scope-col">Measurement Unit</th>
      <th scope="col" class="scope-col">Unit Price</th>
      <th scope="col" class="scope-col">Qty</th>
      <th scope="col" class="scope-col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @all_foods.each do |food| %>
      <tr>
        <td><%= food.name %></td>
        <td><%= food.measurement_unit %></td>
        <td>$<%= food.price %></td>
        <td><%= food.quantity %></td>
        <td>
          <%= button_to "Delete", food_path(food), method: :delete, data: { confirm: "Are you sure you want to delete this post?" }, class: "btn" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</section>